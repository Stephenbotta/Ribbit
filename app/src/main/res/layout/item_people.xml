<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_people_parent_layout_margin">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textGray"
        android:textSize="@dimen/item_people_tv_date_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Wed, 03 2018" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_pin"
        android:textColor="@color/textGray"
        android:textSize="@dimen/item_people_tv_date_text_size"
        app:layout_constraintLeft_toRightOf="@+id/tvDate"
        tools:text="Jubilee Building" />

    <view
        android:id="@+id/line"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="11dp"
        app:layout_constraintStart_toStartOf="@id/tvLocationName"
        app:layout_constraintTop_creator="10"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationName" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvLocationAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="@color/textGray"
        android:textSize="@dimen/item_people_tv_address_text_size"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationName"
        tools:text="14, Hahn Garden Street. 917, NY" />

    <android.support.v7.widget.CardView
        android:id="@+id/userCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationAddress">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <!-- todo update constraints -->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_people_time"
                android:padding="10dp"
                android:text="Shawn · 29"
                android:textColor="@color/textGray"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="16dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_enquire"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="normal"
                app:layout_constraintBottom_toBottomOf="@id/ivProfilePic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivProfilePic" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:text="Shawn · 29"
                android:textColor="@color/textGray"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/ivProfilePic" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvUserDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="8dp"
                android:text="Progect Manager at Apex Group."
                android:textColor="@color/textGray"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
