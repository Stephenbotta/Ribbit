<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivGroup"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dp"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/tvUnreadCount"
        android:layout_toEndOf="@id/ivGroup"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textGray"
        android:textSize="16sp"
        tools:text="Test Group" />

    <TextView
        android:id="@+id/tvUnreadCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/shape_red_rounded_4dp"
        android:fontFamily="@font/brandon_text_bold"
        android:includeFontPadding="false"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="1"
        tools:visibility="visible" />

</RelativeLayout>