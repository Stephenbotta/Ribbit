<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/white</item>

        <!-- Disable multi touch -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>

        <item name="android:fontFamily">@font/roboto_text_regular</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.Landing">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Images">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="LoadingDialog" parent="AppTheme">    
        <item name="android:windowFrame">@null</item>   
        <item name="android:windowBackground">@android:color/transparent</item>   
        <item name="android:windowIsFloating">true</item>   
        <item name="android:windowContentOverlay">@null</item>    
        <item name="android:windowTitleStyle">@null</item>    
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>  
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>  
        <item name="android:backgroundDimEnabled">true</item>   
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ExploreTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_text_bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SearchViewSearchVenues" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_text_regular</item>
        <item name="android:editTextColor">@color/textGray</item>
        <item name="android:textColorHint">@color/textGray66</item>
    </style>

    <style name="ToolbarBoldMenuText" parent="Theme.MaterialComponents.Light">
        <item name="actionMenuTextColor">@color/toolbar_menu_text</item>
        <item name="android:fontFamily">@font/roboto_text_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:fontFamily">@font/roboto_text_medium</item>
        <item name="android:textColor">@color/editTextContent</item>
        <item name="android:textColorHint">@color/editTextHint</item>
        <item name="android:background">@drawable/background_edit_text_gray_rounded_4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.EditTextCreateVenue">
        <item name="colorControlNormal">@color/greyImageBackground</item>
        <item name="android:fontFamily">@font/roboto_text_regular</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.SwitchCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.FabGroups">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DialogFragmentAnimation">
        <item name="android:windowEnterAnimation">@anim/parallax_right_in</item>
        <item name="android:windowExitAnimation">@anim/parallax_right_out</item>
    </style>

    <style name="ProgressBarChatMessage" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
        <item name="android:background">@drawable/background_chat_message_progress_bar</item>
    </style>

    <style name="VenueFiltersParent" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/selector_venue_filters_parent_background</item>
        <item name="android:button">@null</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:fontFamily">@font/roboto_text_medium</item>
    </style>

    <style name="VenueDetailsExpandedTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_text_bold</item>
    </style>

    <style name="VenueDetailsCollapsedTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_text_bold</item>
    </style>

    <style name="JoinVenueExpandedTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_text_bold</item>
    </style>

    <style name="JoinVenueCollapsedTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_text_bold</item>
    </style>
</resources>